{
    "compilerOptions": {
        "lib": ["es2021", "dom"],
        "module": "NodeNext",
        "target": "es2021",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "NodeNext",
        "declaration": true,
        "allowJs": true,
        "outDir": "./out",
        "rootDir": "./"
      },
      "include": [
        "exposr.js",
        "build.js",
        "src/**/*"
      ],
      "exclude": ["node_modules"]
}